{
  "name": "Jobsoid Assistant",
  "description": "Jobsoid Assistant extension to make life easier.",
  "version": "1.5.0",
  "manifest_version": 3,
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "webRequest",
    "clipboardRead",
    "clipboardWrite",
    "tabs"
  ],
  "host_permissions": [
    "https://app.jobsoid.com/*",
    "http://localhost:8100/*",
    "https://int-mng.cx-rad.in/*",
    "https://int-mng.cdmx.io/*"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}